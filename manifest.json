{
    "manifest_version": 3,
    "name": "IdleTab Killer",
    "version": "1.0",
    "description": "Close least recently used tabs automatically.",
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icons.png",
      "32": "icons/icons.png",
      "48": "icons/icons.png",
      "128": "icons/icons.png"
    }
  }
  